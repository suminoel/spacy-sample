<% if current_user %>
  <% if post.bookmark_user(current_user.id) %>
    <%= button_to bookmark_path(bookmark, id: post.id), method: :delete, remote: true do %>
      <span class="fa fa-star bookmark-btn-unbookmark"></span>
      <span>
        <%= post.bookmarks_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to post_bookmarks_path(post), remote: true do %>
      <span class="fa fa-star bookmark-btn"></span>
      <span>
        <%= post.bookmarks_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
    <span class="fa fa-star bookmark-btn-unbookmark"></span>
    <span>
      <%= post.bookmarks_count %>
    </span>
<% end %>
